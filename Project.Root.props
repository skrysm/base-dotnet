<!--

  Root props for all projects.

  Must be imported by all projects via:

    <Import Project="$([MSBuild]::GetPathOfFileAbove('Project.Root.props', '$(MSBuildThisFileDirectory)'))" />

-->
<!-- You can find the latest version of this file here: https://github.com/skrysmanski/base-dotnet -->
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <!-- The directory where this 'Project.Root.props' file is located. -->
    <ProjectsRootDirectory>$(MSBuildThisFileDirectory)</ProjectsRootDirectory>

    <!-- This directory contains all shared/common .props (and related) files. -->
    <ProjectCommonsDirectory>$(ProjectsRootDirectory)/_ProjectCommons/</ProjectCommonsDirectory>
  </PropertyGroup>

</Project>
